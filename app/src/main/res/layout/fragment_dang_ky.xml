<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#BBD7F3FF"
    tools:context=".Fragment.DangKyFragment">
    <ImageView
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:src="@drawable/back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="10sp"/>
    <ImageView
        android:id="@+id/dangky_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/boy"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="100sp"/>
    <TextView
        android:id="@+id/txt1_dk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng ký tài khoản"
        android:textColor="#000000"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/dangky_logo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20sp"/>
    <EditText
        android:id="@+id/txt_sdt_dk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_edittext"
        android:hint="Nhập vào số đện thoại"
        android:textColorHint="#474747"
        android:paddingLeft="15sp"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/txt1_dk"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="70sp"/>
    <EditText
        android:id="@+id/txt_mk_dk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_edittext"
        android:hint="Nhập vào mật khẩu"
        android:textColorHint="#474747"
        android:paddingLeft="15sp"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/txt_sdt_dk"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20sp"/>
    <EditText
        android:id="@+id/txt_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_edittext"
        android:hint="Nhập vào tên tài khoản"
        android:textColorHint="#474747"
        android:paddingLeft="15sp"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/txt_mk_dk"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20sp"/>
    <Button
        android:id="@+id/btn_dk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_btn"
        app:backgroundTint="@null"
        android:text="Đăng ký"
        android:textSize="22sp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_username"
        android:layout_marginTop="40sp"
        />
    <TextView
        android:id="@+id/txt_dn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bạn đã có tài khoản? Đăng nhập"
        android:textSize="16sp"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_dk"
        android:layout_marginTop="20sp"/>


</androidx.constraintlayout.widget.ConstraintLayout>